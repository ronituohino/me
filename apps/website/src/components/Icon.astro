---
const mappings = {
  linkedin: {
    initial: [0, 0],
    hover: [0, 1],
  },
  github: {
    initial: [1, 0],
    hover: [1, 1],
  },
  email: {
    initial: [2, 0],
    hover: [2, 1],
  },
  cv: {
    initial: [3, 0],
    hover: [3, 1],
  },
  star: {
    initial: [0, 2],
    hover: [0, 2],
  },
  student: {
    initial: [1, 2],
    hover: [1, 2],
  },
  company: {
    initial: [2, 2],
    hover: [0, 1],
  },
  test: {
    initial: [3, 2],
    hover: [0, 1],
  },
  note: {
    initial: [0, 3],
    hover: [1, 3],
  },
  key: {
    initial: [2, 3],
    hover: [3, 3],
  },
};

type Props = {
  icon: keyof typeof mappings;
  class?: string;
};

const { icon, class: className } = Astro.props;
---

<span class={className}></span>

<style
  define:vars={{
    bg: `url("/icons.png") -${mappings[icon].initial[0] * 48}px -${mappings[icon].initial[1] * 48}px`,
    hoverBg: `url("/icons.png") -${mappings[icon].hover[0] * 48}px -${mappings[icon].hover[1] * 48}px`,
  }}
>
  span {
    display: block;
    width: 48px;
    height: 48px;
    background: var(--bg);
    color: var(--color);
  }

  span:hover {
    background: var(--hoverBg);
  }

  span: has();
</style>

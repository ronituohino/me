---
type Props = {
  href: string;
  ariaLabel?: string;
  title?: string;
  class?: string;
};
const { href, ariaLabel, title, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noreferrer noopener"
  aria-label={ariaLabel}
  title={title}
  class:list={[className]}><slot /></a
>

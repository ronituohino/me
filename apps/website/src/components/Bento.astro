---
const { class: className, ...props } = Astro.props;
---

<li class={className} {...props}>
  <slot />
</li>

<style lang="less">
  li {
    border-radius: 1rem;
    border: 2px solid;
    border-color: var(--bento-border);
    background: var(--bento-bg);
    overflow: hidden;

    transition: border-color var(--transition-speeds) ease-in-out;

    &:hover,
    &:focus-within {
      border-color: var(--white);
    }

    --fade-delay: 0ms;
    --initial-opacity: 0;
    --initial-animation: fade-in ease 1s;

    opacity: var(--initial-opacity);
    animation: var(--initial-animation);
    animation-delay: var(--fade-delay);
    animation-fill-mode: forwards;

    @media (prefers-reduced-motion) {
      animation: none;
      opacity: 1;
    }
  }

  @keyframes fade-in {
    0% {
      transform: translateY(10px);
      opacity: 0;
    }
    100% {
      transform: translateY(0%);
      opacity: 1;
    }
  }
</style>

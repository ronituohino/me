---
import { getCollection } from "astro:content";
import type { ProjectSchema } from "@content/config";

const shownProjects = await getCollection(
  "projects",
  ({ data }: { data: ProjectSchema }) => data.show !== "hidden"
);
const mappedProjects = shownProjects.map((project) => {
  return {
    title: project.data.title,
    organization: project.data.organization,
    year: project.data.year,
    description: project.data.description,
    technologies: project.data.technologies,
    links: project.data.links,
    show: project.data.show,
  };
});
const sortedProjects = mappedProjects.toSorted((a, b) => {
  if (a.year > b.year) {
    return -1;
  } else if (b.year > a.year) {
    return 1;
  } else {
    return 0;
  }
});

import Layout from "@layouts/Layout.astro";

import { IconLink } from "@components/IconLink";
import { Slideshow } from "@components/Slideshow";
import { AgeCode } from "@components/AgeCode";
import { Projects } from "@components/Projects";
---

<Layout>
  <section class="br">
    <hgroup>
      <h1>Roni Tuohino</h1>
      <p>Fullstack Developer</p>
    </hgroup>

    <p>I love building systems and going climbing</p>

    <div class="ulist">
      <ul class="actions">
        <li>
          <Slideshow
            client:only
            images={[
              {
                src: "/book.png",
                alt: "Top book Ørnfjord with rock climbers in the background",
                width: 601,
                height: 798,
              },
              {
                src: "/writing.png",
                alt: "Open book with the text 'Hiton siisti mesta!' from Satu, Roni, Antton, and Perttu",
                width: 605,
                height: 798,
              },
            ]}
          />
        </li>
        <li>
          <AgeCode client:only />
        </li>
        <li>
          <Projects client:only projects={sortedProjects} />
        </li>
      </ul>
      <ul class="links">
        <li>
          <IconLink
            link={{
              ariaLabel: "See my GitHub profile",
              href: "https://github.com/ronituohino",
            }}
            icon={{
              icon: "github",
            }}
          />
        </li>
        <li>
          <IconLink
            link={{
              ariaLabel: "See my Linkedin profile",
              href: "https://www.linkedin.com/in/ronituohino/",
            }}
            icon={{
              icon: "linkedin",
            }}
          />
        </li>
        <li>
          <IconLink
            link={{
              ariaLabel: "Send me an email",
              href: "mailto:rt@ronituohino.com",
            }}
            icon={{
              icon: "email",
            }}
          />
        </li>
        <li>
          <IconLink
            link={{
              ariaLabel: "Download résumé (CV)",
              href: "/ronituohino-resume.pdf",
            }}
            icon={{
              icon: "cv",
            }}
          />
        </li>
      </ul>
    </div>
  </section>
</Layout>

<style>
  hgroup > h1,
  hgroup > p,
  section > p {
    filter: drop-shadow(0px 0px 6px hsl(0, 0%, 25%));
  }

  .br {
    padding: var(--content-padding);
    position: absolute;
    bottom: 0;
    right: 0;

    text-align: right;
    display: flex;
    flex-direction: column;
    align-items: end;
    justify-content: end;
    gap: 1rem;

    max-width: 500px;
  }

  .ulist {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .actions,
  .links {
    display: flex;
    flex-direction: row;
    gap: 0.25rem;
    flex-wrap: wrap;
    justify-content: end;
  }

  @media screen and (min-width: 420px) {
    .ulist {
      flex-direction: row;
    }
  }
</style>
